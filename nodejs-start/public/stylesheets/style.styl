/*
 * Import nib
 */
@import 'nib'

/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Quicksand')

/*
 * Nib provides a CSS reset
 */
global-reset()

/*
 * Store the main color and
 * background color as variables
 */
main-color = orange
background-color = #fff

body
 
  background-color background-color
  color #444

header
  font-family 'verdana'
  font-size x-large
  font-weight bolder
  font-style oblique
  padding 23px 40px 50px 36px
  margin-left 8px
  margin-right 8px
  margin-bottom 12px
  color #000
  text-align justify

  /*
   * Note the use of the `main-color`
   * variable and the `darken` function
   */
  background-color main-color
  margin-top: 8px;

.container
  margin 14px 8px 8px 8px
  padding-top 15px
  background-image url(../images/map.png)
  overflow hidden
  height 100%

.main-content
  float left
  width 300px

  p
    margin-bottom 20px

.sidebar
  clear both
  margin-top 14px
  width 80%
  height auto
  left 50%
  transform translateX(-50%)
  position relative

  .widget

    /*
     * Note the lack of vendor
     * prefixes here. Nib will
     * add them for us
     */
    border-radius 3px
    border 1px solid #ccc

    background-color background-color
    box-shadow inset 0px 0px 0px 3px rgba(#fff, 0.8), 0px 3px 0px -2px rgba(#000, 0.1)

    h1
      background-color main-color
      margin 13px 3px 13px 3px
      font-family 'verdana'
      padding 5px
      margin-bottom 10px
      font-weight bold
     

    p
      font-family 'verdana'
      font-size 13px
      padding 0px 10px
      margin-bottom 10px

p
  line-height 1.8

footer
  width 500px
  margin 50px auto
  border-top 1px dotted #ccc
  padding-top 5px
  font-size 13px
  p
    text-align center
